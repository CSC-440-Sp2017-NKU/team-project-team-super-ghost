<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
  
<br />

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<br />

<strong>Comments</strong>
<br />
<ul>
  <% @post.comments.each do |comment| %>
      <li>
        <b><%= comment.author %>:</b>
        <%= comment.body %>
      </li>
  <% end %>
</ul>

<h4>New Comment</h4>
<%= form_for [@post, @post.comments.build] do |f| %>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



