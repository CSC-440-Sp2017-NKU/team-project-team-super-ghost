<p id="notice"><%= notice %></p>

<!-- Portion of the code committed to the actual Post/Question display. -->
<div class="media">
    
  <div class="media-left">
    <%= image_tag "helmet.png", style: "width: 100px;", class: "image-circle" %>
  </div>
  
  <div class="media-body">
    
    <!-- Post/Question Portion of code -->  
    <h4 class="media-heading"><%= @post.title %> <small><i>Posted by <u><%= @post.author %></u></i></small></h4>
    <p><%= @post.body %></p>
    
    <p> <!-- Reply | Edit | Delete Buttons. -->
        <a href="#" data-toggle="modal" data-target="#myModal">
          <span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>
          Reply
        </a>
        
        <%= link_to edit_post_path(@post) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <!-- Edit -->
            Edit
        <% end %>
        
        <%= link_to @post, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>  <!-- Delete -->
            Delete
        <% end %>
    </p>
    
    
    
    <!-- Comments Nested Section -->
    <% @post.comments.each do |comment| %>
        <div class="media">
            
            <div class="media-left">
              <%= image_tag "helmet.png", style: "width: 75px;", class: "image-circle" %>
            </div>
            
            <div class="media-body">
              
              <h4 class="media-heading"><%= comment.author %></h4>
              <p><%= comment.body %></p>
              
              <p> <!-- Edit | Delete Buttons. -->
                  
                  <%#= link_to edit_comment_path(comment) do %>
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <!-- Edit -->
                      Edit
                  <%# end %>
                  
                  <%#= link_to comment, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>  <!-- Delete -->
                      Delete
                  <%# end %>
              </p>
              
            </div>
            
        </div>
    <% end %>
    
  </div>
</div>


<!-- Trigger the modal with a button -->
<!--<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">New Comment</button>-->

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Comment</h4>
      </div>
      
      <!-- New Comment Form -->
      <div class="modal-body">
        <%= form_for [@post, @post.comments.build] do |f| %>
          <div class="form-group">
            <%= f.label :author %><br />
            <%= f.text_field :author, placeholder: "Enter username", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body %><br />
            <%= f.text_field :body, placeholder: "Enter comment", class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-default" %>
        <% end %>
      </div>
      
    </div>

  </div>
</div>