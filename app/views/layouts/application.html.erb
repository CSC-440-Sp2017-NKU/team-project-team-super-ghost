<!DOCTYPE html>
<html>
<head>
  <title>NKU-Net</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Bootstrap CDN References -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">-->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <!--<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>-->

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>

  <!-- This JUMBOTRON will serve as the header of the page. -->
  <div class="jumbotron" style="margin: 0px;" id="header">
  	<div class="container">
  		<h1>NKU-Net</h1>
  		<p>This is NKU-Net. Navigate this site to ask NKU students and faculty members any question regarding the Norse Nation.</p>
  	</div>
  </div>


  <!-- The navigation/affix bar for the entire page. TODO: Add affix functionality. -->
  <div data-spy="affix" data-offset-top="300">
    
    <nav class="navbar navbar-inverse" id="navbar">
    	<div class="container-fluid">
    	  
    	  <div class="navbar-header">
    			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
    				<span class="icon-bar"></span>
    				<span class="icon-bar"></span>
    				<span class="icon-bar"></span>
    			</button>
    			<%= link_to courses_path do %>
    			  <%= image_tag "flame.png", class: "navbar-brand" %>
    			<% end %>
    			<b><%= link_to "NKU-Net", root_path, class:"navbar-brand" %></b><!--<a class="navbar-brand" href="#"><b>NKU-Net</b></a>-->
    		</div>

    		<div class="collapse navbar-collapse" id="myNavbar">
          <% if current_user %>
            <ul class="nav navbar-nav">
              <li><p class="navbar-text"><%= link_to current_user.name, show_user_path(current_user.id) %></p></li>
              <li><%= link_to 'My Courses', user_courses_path %></li>
              <li><%= link_to 'Preview Courses', courses_path %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Logout", '/logout' %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
              <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            </ul>
          <% end %>
    		</div>
    		
    	</div>
    </nav>
  
    <!-- BREADCRUMBS -->
    <% if defined? @breadcrumbs %>
      <ol class="breadcrumb">
        <% @breadcrumbs.first(@breadcrumbs.length-1).each do |breadcrumb| %>
          <li><%= link_to breadcrumb.name, breadcrumb.path, class: "breadcrumb-item" %></li>
        <% end %>
        <li><%= link_to @breadcrumbs.last.name, @breadcrumbs.last.path, class: "breadcrumb-item active" %></li>
      </ol>
    <% end %>
  
  </div>

  <!-- Rendering of the current page. -->
  <div class="container">
    <div class="row">
      
    </div>
 	  <div class="row">
    	<div class="col-md-12">
        <%= yield %>
      </div>
  	</div>
  </div>



  <!-- Footer that will have contact information. -->
  <hr />
  <div class="container" id="footer">
  	Copyright &#x24B8; 2017 Team Super-Ghost Development
  </div>

</body>
</html>
