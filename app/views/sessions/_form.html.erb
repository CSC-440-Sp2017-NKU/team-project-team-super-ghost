<h1>Login</h1>

<% if @errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @errors.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_tag '/login' do %>
    <div class="field">
      <%= label :user, 'email' %>
      <%= text_field_tag :email, "", class: "form-control" %>
    </div>
    <div class="field">
      <%= label :user, 'password' %>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>
    <div class="field">
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
<% end %>