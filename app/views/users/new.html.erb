<h1>Signup</h1>

<%= form_for :user, url: '/users' do |f| %>
    <div class="field">
      <%= label :user, 'name' %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field">
      <%= label :user, 'email' %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="field">
      <%= label :user, 'password' %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
<% end %>